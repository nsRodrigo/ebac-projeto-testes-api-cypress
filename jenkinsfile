pipeline {
    agent any

    stages {
        stage('Clonar o Repositório') {
            steps {
                git branch: 'main', url: 'https://github.com/nsRodrigo/teste-api-cypress'
            }
        }
        stage('Instalar das dependencias') {
            steps {
                bat 'npm install'
                bat 'npm install cypress'
                bat 'npm install start-server-and-test'
            }
        }
        stage('Execução dos testes') {
            steps {
                bat 'npx start-test http://localhost:3000'
                bat 'npm run cy:report'
            }
        }
    }
}